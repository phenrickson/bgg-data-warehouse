# Environment Configuration
ENVIRONMENT=dev  # Environment to run in (dev, test, prod)

# Google Cloud Platform Configuration
GCP_PROJECT_ID=gcp-demos-411520
GCS_BUCKET=bgg-data-warehouse
GOOGLE_APPLICATION_CREDENTIALS=credentials/service-account-key.json

# Application Configuration
BATCH_SIZE=100  # Number of games to process in each batch
LOG_LEVEL=INFO  # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)

# API Rate Limiting
API_RATE_LIMIT=2.0  # Maximum requests per second
API_RETRY_DELAY=5   # Seconds to wait between retries
MAX_RETRIES=3       # Maximum number of retry attempts

# Data Quality Monitoring
FRESHNESS_THRESHOLD_HOURS=24  # Maximum age of data before considered stale
QUALITY_CHECK_INTERVAL=14400  # Run quality checks every 4 hours (in seconds)
ALERT_ON_FAILURES=true       # Whether to alert on quality check failures

# Health Check Configuration
PORT=8080  # Port for health check endpoint

# Optional: Email Notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-specific-password
# NOTIFICATION_EMAIL=alerts@your-domain.com

# Optional: Slack Notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
# SLACK_CHANNEL=#data-pipeline-alerts

# Optional: Development Settings
# DEV_MODE=true
# MOCK_API_RESPONSES=false
# SKIP_DATA_VALIDATION=false
